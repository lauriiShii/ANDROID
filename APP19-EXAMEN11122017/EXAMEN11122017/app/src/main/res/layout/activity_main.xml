<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorChatBackground"
    tools:context="com.example.eclip.examen_11_12_2017.main.MainActivity">

    <ListView
        android:padding="@dimen/margin"
        android:id="@+id/lstMensajes"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/margenDotones"
        android:stackFromBottom="false" />


    <EditText
        android:id="@+id/txtMensaje"
        android:layout_width="0dp"
        android:layout_height="@dimen/alturaBotones"
        android:layout_marginBottom="@dimen/margin"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="@dimen/margin"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/fab"
        app:layout_constraintStart_toStartOf="parent" />

    <!--<android.support.design.widget.FloatingActionButton
        android:id="@+id/btnEnviar"
        android:layout_width="@dimen/alturaBotones"
        android:backgroundTint="@color/colorPrimaryDark"
        android:layout_height="@dimen/alturaBotones"
        android:layout_margin="@dimen/margin"
        android:src="@drawable/ic_send_white_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />-->

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="8dp"
        android:src="@drawable/ic_send_white_24dp"
        app:borderWidth="0dp"
        app:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</android.support.constraint.ConstraintLayout>
