<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frgGame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:background="@android:color/white"
    android:paddingRight="0dp"
    android:paddingTop="16dp"
    tools:context="com.android.lauracalvente.app4_poketri.Fragment.playFragment">


    <Button
        android:id="@+id/btnPlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/fragment_play_margin_top_button"
        android:textSize="@dimen/fragment_play_size_text"
        android:background="@android:color/holo_red_dark"
        android:textColor="@android:color/white"
        android:padding="@dimen/fragment_play_padding_button"
        android:text="@string/fragment_play_buuton" />

    <ImageView
        android:id="@+id/imgPikachu"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/btnPlay"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp" />

</RelativeLayout>
